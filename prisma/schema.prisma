// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Memos {
  // This sets the id of the database. This parameter will be auto-generated by the MongoDB database
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  // Add the completion information as a boolean and set its default value is false
  userId      String
  // Add the title task name as a string
  title       String @default("Untitled")
  // Add the title task name as a string
  memo        String
  // create a createdAt field on when the data was added to MongoDB using the now() parameter
  createdAt   DateTime @default(now())
  // create a updatedAt field on when the data was update to MongoDB
  updatedAt   DateTime @updatedAt
}


model Tasks {
  // This sets the id of the database. This parameter will be auto-generated by the MongoDB database
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  // Add the title task name as a string
  title       String
  // Add the completion information as a boolean and set its default value is false
  isComplete  Boolean @default(false)
  // create a createdAt field on when the data was added to MongoDB using the now() parameter
  createdAt   DateTime @default(now())
  // create a updatedAt field on when the data was update to MongoDB
  updatedAt   DateTime @updatedAt
}